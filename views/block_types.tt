
<div class="container add_frame block_type_list">
	<h1>Block Types</h1>

	<div class="menu">
		<a href="new">new block type</a>
	</div>

	<table>
		<tr>
			<th></th>
			<th>name</th>
			<th>circuits</th>
			<th>pins per circuit</th>
			<th>colour</th>
		</tr>
		[% FOREACH block_type IN block_types %]
		<tr>
			<td class="buttons">
				<a href="/block_type/[% block_type.id %]" title="edit block_type" class="lsf">edit</a>
				[% UNLESS block_type.is_used %]
				<a href="javascript:void(0)" title="delete" class="lsf delete">delete</a>
				[% END %]
			</td>
			<td class="name">[% block_type.name | html %]</td>
			<td class="name">[% block_type.circuit_count | html %]</td>
			<td class="name">[% block_type.circuit_pin_count | html %]</td>
			<td class="name" style="background:[% block_type.html_colour %]">[% block_type.html_colour | html %]</td>
		</tr>
		[% END %]
	</table>

</div>

<script type="text/javascript" src="[% request.uri_base %]/js/main.js"></script>

